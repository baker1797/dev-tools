/*------------------------------------*\
	Footer General
\*------------------------------------*/
#footer {
	padding: 1.618em 0 !important;
}

.footer-wrap {
	background-color: #5C9232 !important;
}

.footer-wrap li a {
	font-weight: normal;
}

.footer-wrap,
.footer-wrap a,
.footer-wrap .widget h3,
.footer-wrap #copyright {
	color: #fff !important;
}

.footer-wrap #copyright .copyright-text {
	margin: 0;
}




/*------------------------------------*\
	Footer Widgets
\*------------------------------------*/
.atfollowwidget .addthis_default_style {
	padding-top: 10px;
}

/* Shrink Footer White Space */
#footer-widgets {
	padding: 1.631em 0 !important;
}

#footer-widgets .widget {
	margin-bottom: 0 !important;
}




/*------------------------------------*\
	Tablet / Mobile
\*------------------------------------*/
@media all and (max-width: 1000px) {
	.footer-wrap {
		margin: 0 !important;
		padding: 20px !important;
	}
	
	.footer-wrap .col-full {
		padding-left: 0 !important;
		padding-right: 0 !important;
	}
}

@media only screen and (min-width: 768px) {
	.footer-wrap {
		margin: 0;
	}
}

@media only screen and (max-width: 768px) {
	.footer-wrap {
		padding-left: 20px;
		padding-right: 20px;
	}

	#footer-widgets {
		border-top: 0;
	}

	#footer-widgets .widget {
		margin-bottom: 20px !important;
	}
}
